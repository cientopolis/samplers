<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.cientopolis.samplers.ui.samples_list.SamplesListFragment">

    <ListView
        android:id="@+id/list_samples"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ListView>

    <TextView
        android:id="@+id/lb_no_samples_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/samples_list_no_samples_message"
        android:textSize="@dimen/sl_no_samples_message_text_size"
        android:textAlignment="center"
        />

</RelativeLayout>
