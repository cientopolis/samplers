<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".framework.photo.PhotoFragment"
    android:weightSum="1">

   <!-- <ImageView
        android:id="@+id/photo_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_next"
        android:layout_gravity="start|top"
        android:background="@color/colorAccent"
        /> -->

    <Button
        android:id="@+id/bt_retake_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_retake_photo"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignBaseline="@+id/bt_next"
        android:layout_alignBottom="@+id/bt_next"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="27dp"
        android:text="@string/bt_next" />

  <ImageView
      android:id="@+id/photo_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/common_full_open_on_phone"
      android:layout_marginTop="22dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_above="@id/bt_next"
      android:layout_margin="10dp"
      />

</RelativeLayout>